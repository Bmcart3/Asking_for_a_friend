<section id="questions-main" class="section">
  <div class="columns">
    <div class="column is-4">
      <!--Ask New Question -->
      <article class="panel">
        <p class="panel-heading">
          Ask a new question!
        </p>
        <div class="panel-block">
          <div class="control">
            <label for="title" class="label">Title</label>
            <input class="input mb-2 is-normal" type="text" placeholder="Enter a title for your question" id="title-input">
            <input class="input mb-2 is-small" type="text" placeholder="Enter a title for your question" id="title-input">
            <label for="content" class="label">Content</label>
            <textarea id="question-input" class="textarea is-normal" placeholder="Provide any necessary details"></textarea>
            <textarea id="question-input" class="textarea is-small" placeholder="Provide any necessary details"></textarea>
            <input class="button mt-3 is-normal" type="submit" value="Submit" id="question-form">
            <input class="button mt-3 is-small" type="submit" value="Submit" id="question-form">
          </div>
        </div>
      </article>
      <!--All Questions-->
      <article class="panel">
        <p class="panel-heading">
          All Questions
        </p>
        <ul id="question-list">
          {{#each questions}}
          {{#unless answer}}
          <li>
            <a class="panel-block" data-id="{{ id }}">
              <span class="panel-icon">
                <i class="fas fa-question" aria-hidden="true"></i>
              </span>
              {{ title }}
            </a>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </article>
    </div>
    <!--Display the clicked question-->
    <div class="column is-8">
      <div class="box" id="question-box">
        <h3 id="question-heading">Just asking for a friend...</h3>
        <div id="display-question">
          <h4 id="display-question-title"></h4>
          <p id="display-question-content"></p>
          <div id="question-details">
            <span id="display-username" class="content is-small mt-3"></span>
            <span id="display-createdAt" class="content is-small mt-3"></span>
          </div>

        </div>
        <hr>
        <!--Display the answers to the clicked question-->
        <div>
          <h3 id="answers-heading">Answers</h3>
          <div class="content">
            <ol id="answer-list">
            </ol>
          </div>
        </div>
        <hr>
        <!--Input to answer a question-->
        <h3 id="answer-form-heading">Submit Your Answer</h3>
        <form action="">
          <div class="control">
            <textarea class="textarea mb-2 is-normal" id="answer-input" placeholder="Enter your answer here" rows="8"></textarea>
            <textarea class="textarea mb-2 is-small" id="answer-input" placeholder="Enter your answer here" rows="8"></textarea>
            <input class="button is-normal" type="submit" value="Submit" id="answer-add">
            <input class="button is-small" type="submit" value="Submit" id="answer-add">
          </div>
        </form>
      </div>
    </div>
  </div>
</section>