<section class="section">
  <div class="columns">
    <div class="column is-4">
      <!--Ask New Question -->
      <article class="panel">
        <p class="panel-heading">
          Ask a new Question!
        </p>
        <div class="panel-block">
          <div class="control">
            <label for="title" class="label">Title</label>
            <input class="input mb-2" type="text" placeholder="Enter a title for your question" id="title-input">
            <label for="content" class="label">Content</label>
            <textarea id="question-input" class="textarea" placeholder="Provide any necessary details"></textarea>
            <input class="button mt-3" type="submit" value="Submit" id="question-form">
          </div>
        </div>
      </article>
      <!--Unanswered Questions-->
      <article class="panel">
        <p class="panel-heading">
          Unanswered Questions
        </p>
        <p class="panel-tabs">
          <a class="is-active">All</a>
          <a>Tech</a>
          <a>Pop Culture</a>
          <a>Automotive</a>
          <a>Health/Nutrition</a>
        </p>
        <div class="panel-block">
          <p class="control has-icons-left">
            <input class="input" type="text" placeholder="Keyword">
            <span class="icon is-left">
              <i class="fas fa-search" aria-hidden="true"></i>
            </span>
          </p>
        </div>
        <ul>
          {{#each questions}}
          <li>
            {{!-- {{#unless answer}} --}}
            <a class="panel-block" data-id="{{ id }}">
              <span class="panel-icon">
                <i class="fas fa-question" aria-hidden="true"></i>
              </span>
              {{ title }}
            </a>
            {{!-- {{/unless}} --}}
          </li>
          {{/each}}
        </ul>
      </article>

      <!--Answered Questions-->
      <article class="panel">
        <p class="panel-heading">
          Answered Questions
        </p>
        <p class="panel-tabs">
          <a class="is-active">All</a>
          <a>Tech</a>
          <a>Pop Culture</a>
          <a>Automotive</a>
          <a>Health/Nutrition</a>
        </p>
        <div class="panel-block">
          <p class="control has-icons-left">
            <input class="input" type="text" placeholder="Keyword">
            <span class="icon is-left">
              <i class="fas fa-search" aria-hidden="true"></i>
            </span>
          </p>
        </div>
        {{#each Questions}}
        <a class="panel-block is-active" data-id="{{ id }}">
          <span class="panel-icon">
            <i class="fas fa-question" aria-hidden="true"></i>
          </span>
        </a>
        {{/each}}
      </article>
    </div>
    <!--Display the clicked question/answer form-->
    <div class="column is-8">
      <div class="box">
        <div id="display-question">
          <h3 id="display-question-title"></h3>
          <div class="content">
            <p id="display-question-content"></p>
          </div>

        </div>
        <hr>
        <div>
          <h3 id="answers-heading">Answers</h3>
          <div class="content">
            <ol>
              <li>
                Answer
              </li>
            </ol>
          </div>
        </div>
        <hr>
        <h3 id="answer-form-heading">Answer This Question</h3>
        <form action="">
          <div class="control">
            <textarea class="textarea mb-2" id = "answer-input" placeholder="Enter your answer here" rows="8"></textarea>
            <input class="button" type="submit" value="Submit" id = "answer-add">
          </div>
        </form>
      </div>
    </div>
  </div>
</section>